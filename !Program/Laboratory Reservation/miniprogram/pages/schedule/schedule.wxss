/* miniprogram/pages/schedule/schedule.wxss */
.schedule-page{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #fff;
}
.classTime {
    height: 80rpx;
    width: 90rpx;
    margin-right: 10rpx;
    margin-top: 10rpx;
    font-size: 28rpx;
    border-radius: 4px ;
    color: white;
    text-align: center;
    line-height: 80rpx;
    background-color: #969799;
}
.schedule{
    display: flex;
    justify-content: space-between;
}
.selected{
    background-color: #02a8a8 !important;
    font-size: 24rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.title{
    font-size: 20rpx !important;
    /* color:#02a8a8 !important; */
    font-weight: bold !important;
    text-align: left !important;
}
.schedule_wrapper{
    overflow-x: scroll;
}
.editSchedule-button{
    background-color: #fff;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: space-around;
}