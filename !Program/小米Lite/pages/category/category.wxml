  <scroll-view class="cate-rigth"  scroll-y="true"  
      scroll-top="0" scroll-left="0" scroll-into-view="{{toView}}" scroll-with-animation="true" enable-back-to-top="true" 
       bindscroll="scrollHeight">
       
      
  </scroll-view>
    


</view>