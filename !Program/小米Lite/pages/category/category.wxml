  scroll-with-animation="true"  >
     <view class="cateList" wx:for="{{cateLists}}" wx:key="index"  data-id="{{item.id}}">
         <text class="catename" >{{item.name}}</text>
    <scroll-view class="cateRight"  scroll-y="true"
         scroll-into-view="{{toView}}" scroll-with-animation="true"  bindscroll="scrollEvent">
         <view class="cate" >
              <block wx:for="{{item.Exmaple}}">
                   
              </block>
                
         <view class="header">
              <view class="line"></view>
              <text class="cateName" >{{item.exmName}} </text>
                     <view class="line"></view>
                     <!-- 物品实例 -->
                     <view class="cateExm">
                          <view class="cateBox">
                               <view class="cateImg">{{cateImg}}</view>
                               <view class="cateGoods">{{cate}}</view>
                          </view>
                     </view>
             
                
            </view>
         </view>
        
    </scroll-view>
      
         
           


     </view>
    
</scroll-view>
  
