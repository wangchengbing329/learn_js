/* pages/category/category.wxss */
/* 左边选择框 */
.container{
    height: 100%;
    display: flex;
    flex-direction: row;
}
::-webkit-scrollbar{  
    height: 0;
    width: 0;
    color: transparent;
  }
.cate-left{
    height: 100%;
    width: 20%;
    border-right: 1px solid #e7e8e9;
    /* -webkit-overflow-scrolling: none; */
    display: flex;
    flex-direction: column;
}
.cate{
    width: 100%;
    height: 100rpx;
    /* background-color: green; */
    margin: 20rpx 0;
    display: flex;
    justify-content: center;

}
.cate-name{
font-size: 30rpx;
text-align: center;
width: 100%;
height: 80rpx;
}
.cate-name.on{
    color:#fe6900
}

/* 右边物品框 */
.cate-right{
    /* width: 80%;
    height: 100%; */
    display: flex;
    flex-direction: column;

   
}
.cateBox{
width: 500rpx;
margin: 0 auto;
}
.header{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}
.lineLeft,.lineRight{
    height: 0;
    border: 1rpx solid grey;
    width: 40rpx;
}
.title{
    color:black;

}
.catelist{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.imgBox{
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
}
.catelist-img{
    width: 60rpx;
    height: 60rpx;
}
.cateID{
    font-size: 25rpx;
}