/* pages/cart/cart.wxss */
/* 购物车为空 */
page{
background-color: #f8f2f2;


}   
.cart{
    width: 100%;
    height: 100%;
    
}
.carloader{
    width: 100%;
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.car{
background-color: #b9b6b6;
height: 200rpx;
width: 200rpx;
border-radius: 50%;
display: flex;
justify-content: center;
align-items: center;
}
.emptycar{
    height: 100rpx;
    width: 100rpx;

    
    
}
.emptyPlace{
  text-align: center;
margin-bottom: 40rpx;
    
}
.hangout{
    background-color: #fe6900;
    width: 600rpx;
    border-radius: 4rpx;
    margin: 0 auto;
    height: 80rpx;
}
.hang{
    color:#fff;
    text-align: center;
    line-height: 80rpx;

}
/* 购物车有东西 */
.cartBox{
width: 100%;
}
.carts{
 width: 100%;
 height: 120rpx;
 margin-top: 20rpx;
 background-color: #fff;
 display: flex;
 align-items: center;
 border: 1rpx solid #ebebeb;
}
.detail{
    width: 90%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.goodsExm{
    width: 46rpx;
    height: 46rpx;
}
.goodsAttr{
    font-size: 25rpx;
    

}
.ammount{
    font-size: 20rpx;
    color: gray;
}
.price{
    font-size:30rpx;
    color: #fe6900;
}
/* 结算 */
.cart-foot{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    z-index: 1;
}
.countBox{
    background-color: #fff;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.selectStatus{
    height: 100rpx;
    width: 150rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.all{
    font-size: 30rpx;
}
.countPrice{
    width: 500rpx;
    font-size: 40rpx;
    text-align: center;
}
.count{
    color: #fe6900;
}
.acount{
    background-color: #fe6900;
    height: 100rpx;
    width: 250rpx;
}
.countAll{
    color: #fff;
    line-height: 100rpx;
    text-align: center;
}